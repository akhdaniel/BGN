<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_mitra_sppg" model="ir.actions.report">
            <field name="name">Mitra Sppg</field>
            <field name="model">vit.mitra_sppg</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_sppg.vit_mitra_sppg_report</field>
            <field name="report_file">vit_sppg.vit_mitra_sppg_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_sppg.model_vit_mitra_sppg"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_sppg.vit_mitra_sppg_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Mitra Sppg: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Id Mitra</strong>
                            <p class="m-0" t-field="doc.id_mitra" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Code</strong>
                            <p class="m-0" t-field="doc.code" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jenis</strong>
                            <p class="m-0" t-field="doc.jenis" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Alamat</strong>
                            <p class="m-0" t-field="doc.alamat" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Status</strong>
                            <p class="m-0" t-field="doc.status" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Mulai Opsnal</strong>
                            <p class="m-0" t-field="doc.mulai_opsnal" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ka Sppg</strong>
                            <p class="m-0" t-field="doc.ka_sppg" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Hp Sppg</strong>
                            <p class="m-0" t-field="doc.hp_sppg" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Mail Sppg</strong>
                            <p class="m-0" t-field="doc.mail_sppg" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Yayasan</strong>
                            <p class="m-0" t-field="doc.yayasan" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Provinsi</strong>
                            <p class="m-0" t-field="doc.provinsi_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Kab Kota</strong>
                            <p class="m-0" t-field="doc.kab_kota_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_sppg.vit_mitra_sppg_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_sppg.vit_mitra_sppg_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>