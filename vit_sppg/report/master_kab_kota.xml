<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_master_kab_kota" model="ir.actions.report">
            <field name="name">Master Kab Kota</field>
            <field name="model">vit.master_kab_kota</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_sppg.vit_master_kab_kota_report</field>
            <field name="report_file">vit_sppg.vit_master_kab_kota_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_sppg.model_vit_master_kab_kota"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_sppg.vit_master_kab_kota_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Master Kab Kota: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Code</strong>
                            <p class="m-0" t-field="doc.code" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Provinsi</strong>
                            <p class="m-0" t-field="doc.provinsi_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_sppg.vit_master_kab_kota_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_sppg.vit_master_kab_kota_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>