<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_master_provinsi_tree" model="ir.ui.view">
            <field name="name">vit_master_provinsi_tree</field>
            <field name="model">vit.master_provinsi</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Master Provinsi">
                    <field name="name" /> <!-- 100-->
                    <field name="code" /> <!-- 101-->
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_master_provinsi_form" model="ir.ui.view">
            <field name="name">vit_master_provinsi_form</field>
            <field name="model">vit.master_provinsi</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Master Provinsi">
                    <header>
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Master Provinsi Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="code"  />
                            </group>
                            <group> <!-- right -->
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_master_provinsi_search" model="ir.ui.view">
            <field name="name">vit_master_provinsi</field>
            <field name="model">vit.master_provinsi</field>
            <field name="arch" type="xml">
                <search string="Master Provinsi">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Code" name="filter_by_code" domain="[('code','=','')]" />
                    <field name="name" select="True"/>
                    <field name="code" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_master_provinsi_kanban" model="ir.ui.view" >
            <field name="name">vit_master_provinsi</field>
            <field name="model">vit.master_provinsi</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                            </div> <!--oe_kanban_details-->
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- action window -->
        <record id="action_master_provinsi" model="ir.actions.act_window">
            <field name="name">Master Provinsi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.master_provinsi</field>
            <field name="view_mode">tree,form,kanban,pivot</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Master Provinsi
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_master_provinsi" name="Master Provinsi" parent="vit_sppg_config_menu" action="action_master_provinsi" sequence="20"/>
    </data>
</odoo>