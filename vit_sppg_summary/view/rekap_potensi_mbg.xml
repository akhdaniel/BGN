<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_rekap_potensi_mbg_tree" model="ir.ui.view">
            <field name="name">vit_rekap_potensi_mbg_tree</field>
            <field name="model">vit.rekap_potensi_mbg</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Rekap Potensi Mbg">
                    <field name="potensi_penerima_siswa" /> <!-- 100-->
                    <field name="name" /> <!-- 100-->
                    <field name="potensi_penerima_bumil" /> <!-- 101-->
                    <field name="potensi_penerima_busui" /> <!-- 102-->
                    <field name="potensi_penerima_balita" /> <!-- 103-->
                    <field name="potensi_penerima_total" /> <!-- 104-->
                    <field name="total_penerima_mbg" /> <!-- 105-->
                    <field name="prosentase_penerima_mbg" /> <!-- 106-->
                    <field name="rencana_dapur_mbg" /> <!-- 107-->
                    <field name="jumlah_sppg_aktif" /> <!-- 108-->
                    <field name="prosentase_dapur_mbg" /> <!-- 109-->
                </tree>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_rekap_potensi_mbg_pivot" model="ir.ui.view">
            <field name="name">vit_rekap_potensi_mbg_tree</field>
            <field name="model">vit.rekap_potensi_mbg</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Rekap Potensi Mbg">
                    <field name="name" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_rekap_potensi_mbg_form" model="ir.ui.view">
            <field name="name">vit_rekap_potensi_mbg_form</field>
            <field name="model">vit.rekap_potensi_mbg</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Rekap Potensi Mbg">
                    <header>
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Rekap Potensi Mbg Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="potensi_penerima_siswa"  />
                                <field name="potensi_penerima_bumil"  />
                                <field name="potensi_penerima_busui"  />
                                <field name="potensi_penerima_balita"  />
                                <field name="potensi_penerima_total"  />
                                <field name="total_penerima_mbg"  />
                                <field name="prosentase_penerima_mbg"  />
                                <field name="rencana_dapur_mbg"  />
                                <field name="jumlah_sppg_aktif"  />
                                <field name="prosentase_dapur_mbg"  />
                            </group>
                            <group> <!-- right -->
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_rekap_potensi_mbg_search" model="ir.ui.view">
            <field name="name">vit_rekap_potensi_mbg</field>
            <field name="model">vit.rekap_potensi_mbg</field>
            <field name="arch" type="xml">
                <search string="Rekap Potensi Mbg">

                    <filter string="Potensi Penerima Siswa" name="filter_by_potensi_penerima_siswa" domain="[('potensi_penerima_siswa','=','')]" />
                    <filter string="Potensi Penerima Bumil" name="filter_by_potensi_penerima_bumil" domain="[('potensi_penerima_bumil','=','')]" />
                    <filter string="Potensi Penerima Busui" name="filter_by_potensi_penerima_busui" domain="[('potensi_penerima_busui','=','')]" />
                    <filter string="Potensi Penerima Balita" name="filter_by_potensi_penerima_balita" domain="[('potensi_penerima_balita','=','')]" />
                    <filter string="Potensi Penerima Total" name="filter_by_potensi_penerima_total" domain="[('potensi_penerima_total','=','')]" />
                    <filter string="Rencana Dapur Mbg" name="filter_by_rencana_dapur_mbg" domain="[('rencana_dapur_mbg','=','')]" />
                    <filter string="Jumlah Sppg Aktif" name="filter_by_jumlah_sppg_aktif" domain="[('jumlah_sppg_aktif','=','')]" />
                    <field name="potensi_penerima_siswa" select="True"/>
                    <field name="potensi_penerima_bumil" select="True"/>
                    <field name="potensi_penerima_busui" select="True"/>
                    <field name="potensi_penerima_balita" select="True"/>
                    <field name="potensi_penerima_total" select="True"/>
                    <field name="rencana_dapur_mbg" select="True"/>
                    <field name="jumlah_sppg_aktif" select="True"/>
                    <field name="name" select="True"/>
                    <group string="Group By..">
                        <filter string="Name" domain="[]" name="group_by_name" context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_rekap_potensi_mbg_kanban" model="ir.ui.view" >
            <field name="name">vit_rekap_potensi_mbg</field>
            <field name="model">vit.rekap_potensi_mbg</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                            </div> <!--oe_kanban_details-->
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_rekap_potensi_mbg_graph" model="ir.ui.view">
            <field name="name">vit_rekap_potensi_mbg</field>
            <field name="model">vit.rekap_potensi_mbg</field>
            <field name="arch" type="xml">
                <graph string="Rekap Potensi Mbg" type="bar">
                    <field name="name"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_rekap_potensi_mbg" model="ir.actions.act_window">
            <field name="name">Rekap Potensi Mbg</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.rekap_potensi_mbg</field>
            <field name="view_mode">tree,form,kanban,pivot,graph</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Rekap Potensi Mbg
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_rekap_potensi_mbg" name="Rekap Potensi Mbg" parent="vit_sppg_summary_config_menu" action="action_rekap_potensi_mbg" sequence="30"/>
    </data>
</odoo>